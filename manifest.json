{
    "name": "Duolingo Swahili+",
    "version": "0.1",
    "description": "This extension provides users with audio recordings during Swahili exercises",
    "short_name": "Kiswahili ni nzuri!",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage"
    ],
    "background": "popup.html",
    // "page_action": {
    //     "default_popup": "popup.html",
    //     "default_icon": {
    //         "128": "images/kenya128.png"
    //     }
    // },
    "content_scripts": [
        {
            "matches": [
                "*://www.duolingo.com/*"
            ],
            "js": [
                "background.js"
            ],
            "css": [
                "web-extension.css"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "options_page": "popup.html",
    "icons": {
        "128": "images/kenya128.png"
    },
    "manifest_version": 2
}