{
    "name": "Duolingo Swahili+",
    "version": "0.0.3",
    "description": "This extension provides users with audio during Swahili lessons on Duolingo",
    "short_name": "Kiswahili ni nzuri!",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://www.duolingo.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": ["background.js"], 
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "images/tanzania-flag-128.png"
    },
    "manifest_version": 2
}