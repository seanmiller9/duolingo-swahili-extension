{
    "name": "Duolingo Swahili+",
    "version": "0.1",
    "description": "This extension provides users with audio recordings during Swahili exercises",
    "short_name": "Kiswahili ni nzuri!",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage"
    ],
    "background": "popup.html",
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "images/kenya128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.duolingo.com/skill/sw/*",
                "http://www.duolingo.com/skill/sw/*"
            ],
            "js": [
                "background.js"
            ],
            "css": [
                "web-extension.css"
            ]
        }
    ],
    "icons": {
        "128": "images/kenya128.png"
    },
    "manifest_version": 2
}