{
    "name": "Duolingo Swahili+",
    "version": "0.1",
    "description": "This extension provides users with audio recordings during Swahili exercises",
    "short_name": "Kiswahili ni nzuri!",
    "permissions": [
        "activeTab",
        "storage",
        "tts"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://www.duolingo.com/skill/sw/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "images/tanzania-flag-128.png"
    },
    "manifest_version": 2
}